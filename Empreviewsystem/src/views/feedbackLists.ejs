
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Performance Reviews Needing Feedback</title>
</head>
<body>
  <h1>Performance Reviews Needing Feedback</h1>
  <ul>
    <% performanceReviews.forEach(review => { %>
      <li>
        Performance Review ID: <%= review._id %><br>
        <a href="/feedback/submit?performanceReviewId=<%= review._id %>">Submit Feedback</a>
      </li>
    <% }) %>
  </ul>
</body>
</html>
